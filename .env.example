# ============================================================================
# ZoolZ Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your values
# .env is gitignored and will not be committed
# ============================================================================

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-this
DEBUG=True

# File Storage Paths (use absolute paths)
UPLOAD_FOLDER=/path/to/zoolz/uploads
OUTPUT_FOLDER=/path/to/zoolz/outputs
DATABASE_FOLDER=/path/to/zoolz/database

# File Upload Limits
MAX_CONTENT_LENGTH=104857600  # 100MB in bytes

# Session Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=3600  # 1 hour in seconds

# People Finder API Keys (Optional)
# Get free Google API key: https://developers.google.com/custom-search
GOOGLE_API_KEY=your-google-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id
# Get free NumVerify key: https://numverify.com/
NUMVERIFY_API_KEY=your-numverify-key

# Cache Settings
PEOPLE_FINDER_CACHE_HOURS=24

# Database
DATABASE_URL=sqlite:///zoolz.db

# Redis Configuration (install Redis first: brew install redis)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging Level
LOG_LEVEL=INFO

# Background Task Settings
CELERY_TASK_TIMEOUT=600
CELERY_MAX_RETRIES=3

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:5001

# Model Generation Constraints
MAX_MESH_VERTICES=10000000
MAX_MESH_FACES=20000000
MAX_BOOLEAN_OPERATIONS=10

# File Cleanup Settings
AUTO_CLEANUP_ENABLED=True
AUTO_CLEANUP_HOURS=24
